%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed(type="buton" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="#{root_path}") Quiz Game
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li.active= link_to "Home", root_path
        - if user_signed_in?
          %li= link_to "Secret", secret_path
          %li= link_to "Questions", questions_path
        %li
          %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
            Dropdown
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Action 1", "#"
            %li= link_to "Action 2", "#"
            %li.divider(role="separator")
            %li.dropdown-header Nav Header
            %li= link_to "Action 3", "#"
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Default", "#"
        %li= link_to "Contact", "#"
        %li= link_to "Log Out", destroy_user_session_path, method: :delete if user_signed_in?
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown")
              - if current_user.name.present?
                = current_user.name
              - else
                = current_user.email
              %span.caret
            %ul.dropdown-menu(role="menu")
              %li= link_to 'Profile', edit_user_registration_path
              %li= link_to 'Log out', destroy_user_session_path, method: :delete
        - else
          %li= link_to "Log In", new_user_session_path
          %li= link_to "Sign Up", new_user_registration_path
